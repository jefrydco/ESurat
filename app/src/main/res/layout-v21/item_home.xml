<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--    <data>

            <variable
                name="home"
                type="in.tandur.tandurin.home.homeModel"/>

        </data>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:elevation="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--        <ImageView
                        android:id="@+id/item_home_imageView_thumbnail"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/home_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:src="@drawable/ic_local_florist_pink_64dp"/>-->

            <TextView
                android:id="@+id/item_home_textView_judul"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{home.judul}"
                android:textAlignment="viewStart"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Pengisian data peduli HAM Kota Madiun tahun 2018" />

            <TextView
                android:id="@+id/item_home_textView_tanggalTerima"
                android:layout_width="77dp"
                android:layout_height="21dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@{home.tanggalTerima}"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/item_home_textView_judul"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_home_textView_judul"
                app:layout_constraintTop_toTopOf="@+id/item_home_textView_judul"
                tools:text="TD 02/03/99" />

            <TextView
                android:id="@+id/item_home_textView_dari"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#757575"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/item_home_textView_judul"
                app:layout_constraintStart_toStartOf="@+id/item_home_textView_judul"
                app:layout_constraintTop_toBottomOf="@+id/item_home_textView_judul"
                tools:text="Sekretariat Daerah" />

            <TextView
                android:id="@+id/item_home_textView_status"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:textColor="#1565C0"
                app:layout_constraintEnd_toEndOf="@+id/item_home_textView_tanggalTerima"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/item_home_textView_tanggalTerima"
                tools:layout_editor_absoluteY="63dp"
                tools:text="SELESAI" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_home_textView_dari" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>